# =============================================================================
# HealthFlow Sunbird RC v2 - Environment Configuration
# Egyptian Healthcare Registry Platform
# =============================================================================
# IMPORTANT: Copy this file to .env and update all values before deployment
# DO NOT commit .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_USER=healthflow
POSTGRES_PASSWORD=CHANGE_ME_secure_postgres_password_2024
POSTGRES_DB=registry

# -----------------------------------------------------------------------------
# Keycloak Authentication
# -----------------------------------------------------------------------------
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=CHANGE_ME_secure_keycloak_password
KEYCLOAK_REALM=healthflow
KEYCLOAK_CLIENT=registry-frontend
KEYCLOAK_SECRET=CHANGE_ME_generate_uuid

# -----------------------------------------------------------------------------
# HashiCorp Vault (V2 Key Management)
# -----------------------------------------------------------------------------
VAULT_TOKEN=CHANGE_ME_vault_root_token
VAULT_ADDR=http://vault:8200
VAULT_BASE_PATH=kv/healthflow

# -----------------------------------------------------------------------------
# Encryption Service
# Must be exactly 32 characters for AES-256
# -----------------------------------------------------------------------------
ENCRYPTION_KEY=CHANGE_ME_32_character_key_here!

# -----------------------------------------------------------------------------
# Cequens SMS Configuration (Egyptian SMS Provider)
# Register at: https://www.cequens.com
# API Documentation: https://developer.cequens.com
# -----------------------------------------------------------------------------
CEQUENS_CLIENT_ID=your_cequens_client_id
CEQUENS_CLIENT_SECRET=your_cequens_client_secret
CEQUENS_USERNAME=your_cequens_username
CEQUENS_PASSWORD=your_cequens_password
CEQUENS_SENDER_ID=HealthFlow
CEQUENS_ACCESS_TOKEN=your_cequens_bearer_token
CEQUENS_API_URL=https://apis.cequens.com/sms/v1
CEQUENS_AUTH_URL=https://developer.cequens.com/oauth/token

# -----------------------------------------------------------------------------
# Email Configuration (Optional)
# -----------------------------------------------------------------------------
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@healthflow.eg

# -----------------------------------------------------------------------------
# MinIO File Storage
# -----------------------------------------------------------------------------
MINIO_ACCESS_KEY=healthflow_minio_access
MINIO_SECRET_KEY=CHANGE_ME_minio_secret_key_2024

# -----------------------------------------------------------------------------
# ClickHouse Analytics
# -----------------------------------------------------------------------------
CLICKHOUSE_PASSWORD=CHANGE_ME_clickhouse_password

# -----------------------------------------------------------------------------
# Bulk Issuance Service
# -----------------------------------------------------------------------------
BULK_ISSUANCE_SECRET=CHANGE_ME_bulk_issuance_secret

# -----------------------------------------------------------------------------
# Public URLs (Update for production domain)
# -----------------------------------------------------------------------------
DID_BASE_URL=https://sunbird.healthflow.eg/did
PUBLIC_KEY_BASE_URL=https://sunbird.healthflow.eg/keys
REGISTRY_BASE_URL=https://api.sunbird.healthflow.eg
FRONTEND_URL=https://sunbird.healthflow.eg

# -----------------------------------------------------------------------------
# Egyptian Healthcare Integration Endpoints
# -----------------------------------------------------------------------------
# Egyptian Medical Syndicate
EMS_API_URL=https://api.ems.org.eg
EMS_API_KEY=your_ems_api_key

# Egyptian Drug Authority
EDA_API_URL=https://api.eda.mohealth.gov.eg
EDA_API_KEY=your_eda_api_key

# Universal Health Insurance Authority
UHIA_API_URL=https://api.uhia.gov.eg
UHIA_API_KEY=your_uhia_api_key

# HealthFlow Claims Exchange (HFCX)
HFCX_API_URL=https://hfcx.healthflow.eg
HFCX_PARTICIPANT_CODE=HF001

# -----------------------------------------------------------------------------
# ID Generation Formats (Egyptian Standards)
# -----------------------------------------------------------------------------
IDGEN_FORMAT_DOCTOR=EG-DR-[cy]-[seq:000000]
IDGEN_FORMAT_PHARMACIST=EG-PH-[cy]-[seq:000000]
IDGEN_FORMAT_NURSE=EG-NR-[cy]-[seq:000000]
IDGEN_FORMAT_FACILITY=EG-FAC-[cy]-[seq:00000]
IDGEN_FORMAT_LICENSE=EG-LIC-[cy]-[seq:0000000]

# -----------------------------------------------------------------------------
# Logging & Monitoring
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
ENABLE_TELEMETRY=true
METRICS_ENABLED=true

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
JWT_SECRET=CHANGE_ME_jwt_secret_minimum_32_characters
CORS_ALLOWED_ORIGINS=https://sunbird.healthflow.eg,https://admin.sunbird.healthflow.eg
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_DIGITAL_PRESCRIPTIONS=true
ENABLE_HCX_INTEGRATION=true
ENABLE_UHIA_INTEGRATION=true
ENABLE_BULK_ISSUANCE=true
ENABLE_CREDENTIAL_REVOCATION=true
